@model IEnumerable<Movie_Rental_System.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Customers</h1>

@if (!Model.Any())
{
    <text>We don't have any customers yet </text>

}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Customer

                </th>
                <th>
                    Discount Rate
                </th>
            </tr>
        </thead>

        @foreach (var cus in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(cus.Name, "Details", "Customers", new { @Id = cus.Id }, null)
                </td>
                <td>
                    @cus.MembershipType.DiscountRate%
                </td>
            </tr>
        }

    </table>
}
