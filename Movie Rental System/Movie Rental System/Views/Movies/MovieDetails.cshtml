@model Movie_Rental_System.Models.Movie

@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Name</h2>

<ul>

    <li>
        Genre: @Model.Genre.Name
    </li>
    <li>
        Release Date: @Model.ReleaseDate
    </li>
    <li>
        Date Added: @Model.DateAdded
    </li>
    <li>
        Number in Stocks: @Model.NumberInStock
    </li>
</ul>

